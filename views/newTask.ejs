  <body style="background: linear-gradient(to bottom, #33ccff 0%, #ff99cc 100%);"></body>
    <div class="hero">
      <div class="container">
        <h1 class="display-2 text-center">TodoList</h1>
        <p class="text-center">Manage All your tasks</p>

        <% if(alertmsg.length>0) { %>
        <div
          class="alert alert-warning alert-dismissible fade show"
          role="alert"
        >
          <strong><%= alertmsg %></strong>
          <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <% } %>

        <div class="row">
          <form
            id="form"
            class="col-lg-6 col-8 mx-auto"
            method="POST"
            action="/newTask"
          >
            <h5>Enter task</h5>
            <input
              class="form-control"
              type="text"
              placeholder="Enter a task"
              name="item"
            />
            <br />
            <h5>Enter Due Date(format : DD/MM/YYYY)</h5>
            <input class="form-control" type="date" name="dueDate" />
            <br />
            <h5>Select a Label</h5>
            <select class="form-control" name="label">
              <option value="Personal">Personal</option>
              <option value="Work">Work</option>
              <option value="Shopping">Shopping</option>
              <option value="Other">Other</option>
            </select>
            <br />
            <h5>Set Priority</h5>
            <select class="form-control" name="Priority">
              <option value="1">High</option>
              <option value="2">Average</option>
              <option value="3">Low</option>
            </select>
            <br />
            <br />
            <center>
              <input type="submit" value="Submit" class="btn btn-success" />
            </center>
          </form>
        </div>
        <br />
        <center>
          <a href="/userhome"
            ><button class="btn btn-danger">
              Back
            </button></a
          >
        </center>
      </div>
    </div>
